<odoo>
    <data>
        <record id="form_student" model="ir.ui.view">
            <field name="name">form.student</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>
                            <field name="credential_number" placeholder="Title" readonly="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name="credential_number"/>
                                <field name="name"/>
                                <field name="birthdate"/>
                                <field name="age"/>
                                <field name="email"/>
                                <field name="cellphone"/>
                            </group>
                            <group>
                                <field name="grade_level"/>
                                <field name="group"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Emergency contacts" id="emergency_contact_students">
                                <field name="emergency_contact_ids">
                                    <list>
                                        <field name="relationship"/>
                                        <field name="name"/>
                                        <field name="cellphone"/>
                                        <field name="home_number"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="list_student" model="ir.ui.view">
            <field name="name">list.school</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <list>
                    <field name="credential_number"/>
                    <field name="name"/>
                    <field name="grade_level"/>
                    <field name="group"/>
                </list>
            </field>
        </record>

        <record id="student_search_view" model="ir.ui.view">
            <field name="name">student.search</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <search>
                    <field name="credential_number"/>
                </search>
            </field>
        </record>

        <record id="action_student" model="ir.actions.act_window">
            <field name="name">Student</field>
            <field name="res_model">school.student</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>