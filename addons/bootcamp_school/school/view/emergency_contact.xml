<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="emergency_contact_form_view" model="ir.ui.view">
            <field name="name">emergency.contact.form</field>
            <field name="model">emergency.contact</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Personal information">
                                <field name="name"/>
                                <field name="birthdate"/>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street" class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2" class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state" class="o_address_state" placeholder="State"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
<!--                                    <div name="partner_address_country" class="d-flex justify-content-between">-->
<!--                                        <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>-->
<!--                                    </div>-->
                                </div>
                            </group>
                            <group string="Student's details">
                                <field name="relationship"/>
                                <field name="student_id"/>
                            </group>
                        </group>
                        <group>
                            <group string="Other details">

                                <field name="cellphone"/>
                                <field name="home_number"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="emergency_contact_list_view" model="ir.ui.view">
            <field name="name">emergencyContact.tree</field>
            <field name="model">emergency.contact</field>
            <field name="arch" type="xml">
                <list string="name">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="relationship"/>
                </list>
            </field>
        </record>

        <record id="emergencyContact_search_view" model="ir.ui.view">
            <field name="name">emergency.contact.search</field>
            <field name="model">emergency.contact</field>
            <field name="arch" type="xml">
                <search>
                    <field name="student_id"/>
                </search>
            </field>
        </record>

        <record id="emergency_contact_kanban" model="ir.ui.view">
            <field name="name">Student</field>
            <field name="model">emergency.contact</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_example">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click_ o_kanban_card">
                                <div class="o_kanban_details">
                                    <field name="name">
                                        <div>Relationship: <field name="relationship"/> </div>
                                        <div>Name: <field name="name"/> </div>
                                    </field>
                                </div>
                            </div>
                        </t>
                    </templates>

                </kanban>
            </field>
        </record>

        <record id="emergencyContact_act_window" model="ir.actions.act_window">
            <field name="name">Emergency</field>
            <field name="res_model">emergency.contact</field>
            <field name="view_mode">list,form,kanban</field>
        </record>

    </data>
</odoo>