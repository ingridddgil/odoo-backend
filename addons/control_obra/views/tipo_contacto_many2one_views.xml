<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tipo_contacto_form" model="ir.ui.view">
        <field name="name">tipo.contacto.form</field>
        <field name="model">tipo.contacto</field>
        <field name="arch" type="xml">
            <form string="Tipo Contacto">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tipo_contacto_list" model="ir.ui.view">
        <field name="name">tipo.contacto.list</field>
        <field name="model">tipo.contacto</field>
        <field name="arch" type="xml">
            <list string="Tipo Contacto" editable="top">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_tipo_contacto" model="ir.actions.act_window">
        <field name="name">Tipo Contacto</field>
        <field name="res_model">tipo.contacto</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer Tipo de Contacto
            </p>
        </field>
    </record>
</odoo>