<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_partner_view_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.view.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='vat']" position="after">
                    <field name="tipo_contacto" widget="many2one"/>
                </xpath>

                <!-- SOLUCIÃ“N CORREGIDA: -->
                <xpath expr="//field[@name='child_ids']/kanban/templates/t[@t-name='card']/main"
                       position="inside">
                    <div t-if="record.tipo_contacto.raw_value" class="mt-2">
                        <span class="fw-bold me-2">Tipo Contacto:</span>
                        <field name="tipo_contacto" readonly="1"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>