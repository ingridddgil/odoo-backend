<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_tags_form_view_inherit" model="ir.ui.view">
        <field name="name">project.tags.form.inherit</field>
        <field name="model">project.tags</field>
        <field name="inherit_id" ref="project.project_tags_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//sheet" position="inside">
                <h1>
                    <field name="name"/>
                </h1>
                <group>
                    <group>
                        <field name="partner_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </group>
                    <group>
                        <field name="responsible_id" placeholder="Responsable del servicio"
                               widget="many2one_avatar_user" options="{'no_create': True, 'no_edit':True}"
                               style="width: 100%"/>
                    </group>
                </group>
                <notebook>
                    <page name="description" string="Descripción">
                        <field name="description"/>
                    </page>
                    <page name="projects" string="Proyectos">
                        <field name="project_ids" readonly="True"/>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

    <record id="project_tags_kanban_view" model="ir.ui.view">
        <field name="name">Especialidades</field>
        <field name="model">project.tags</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard o_project_kanban o_emphasize_colors">
                <field name="name"/>
                <field name="color"/>
                <field name="partner_ids"/>
                <field name="project_count"/>
                <field name="responsible_id"/>
                <templates>
                    <!-- CAMBIAR: kanban-box → card -->
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_global_click #{kanban_color(record.color.raw_value)}">
                            <div class="o_project_kanban_main">
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_primary_left">
                                        <div class="o_primary">
                                            <span class="o_text_overflow" t-esc="record.name.value"/>
                                            <span class="o_text_overflow text-muted"
                                                  t-if="record.partner_ids.raw_value">
                                                <field name="partner_ids" widget="many2many_tags"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <div class="o_project_kanban_box">
                                        <span class="o_value" t-esc="record.project_count.value"/>
                                        <span class="o_label ms-1">Proyectos</span>
                                    </div>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="responsible_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="project_tags_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">project.tags</field>
        <field name="view_mode">kanban,list,pivot,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tags found. Let's create one!
            </p>
            <p>
                Use tags to categorize your tasks.
            </p>
        </field>
    </record>
</odoo>