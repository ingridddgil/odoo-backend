<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vistas para Orígenes -->
    <record id="view_sale_origen_list" model="ir.ui.view">
        <field name="name">sale.order.origen.list</field>
        <field name="model">sale.order.origen</field>
        <field name="arch" type="xml">
            <list string="Orígenes" decoration-muted="active == False">
                <field name="name" string="Nombre"/>
                <field name="color" widget="color_picker"/>
                <field name="active" string="Activo"/>
            </list>
        </field>
    </record>

    <record id="view_sale_origen_form" model="ir.ui.view">
        <field name="name">sale.order.origen.form</field>
        <field name="model">sale.order.origen</field>
        <field name="arch" type="xml">
            <form string="Origen">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="name" string="Nombre"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="active" string="Activo"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vistas para Destinos -->
    <record id="view_sale_destino_list" model="ir.ui.view">
