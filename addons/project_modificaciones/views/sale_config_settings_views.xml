                    </div>
                    <group>
                        <group>
                            <field name="name" string="Nombre"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="active" string="Activo"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vistas para Incidencias -->
