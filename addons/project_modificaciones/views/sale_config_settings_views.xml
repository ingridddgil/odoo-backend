            </form>
        </field>
    </record>


    <!-- Acciones y submenús -->
    <record id="action_sale_origen" model="ir.actions.act_window">
        <field name="name">Orígenes</field>
        <field name="res_model">sale.order.origen</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configurar los orígenes para órdenes de venta
            </p>
        </field>
    </record>

    <menuitem id="menu_sale_config_origen" 
              name="Orígenes" 
              parent="sale.menu_sales_config" 
              action="action_sale_origen" 
              sequence="10"
              groups="base.group_user"/>

